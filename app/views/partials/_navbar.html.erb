<div class="navbar d-flex align-items-center justify-content-between py-3">
  <div class="navbar__links">
    <%= image_tag asset_path('logo.png'), class: "mr-2 logo" %>
    <a href="/" class="mr-2 navbar__link--link navbar__link--link--active m-2">Home</a>
    <a href="/use_cases" class="mr-2 navbar__link--link m-2">Code</a>
  </div>
  <%= form_tag search_results_path, class: "d-flex", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find some code"
    %>
    <%= submit_tag "Search", class: "btn btn-success ml-2" %>
  <% end %>
</div>